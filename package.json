{
  "name": "umple-lsp-monorepo",
  "private": true,
  "description": "Monorepo for Umple Language Server and editor clients",
  "repository": {
    "type": "git",
    "url": "https://github.com/DraftTin/umple-lsp"
  },
  "workspaces": [
    "packages/tree-sitter-umple",
    "packages/server",
    "packages/vscode"
  ],
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "npm run copy-wasm",
    "copy-wasm": "cp packages/tree-sitter-umple/tree-sitter-umple.wasm packages/server/tree-sitter-umple.wasm",
    "download-jar": "curl -# -L https://try.umple.org/scripts/umplesync.jar --output packages/server/umplesync.jar"
  }
}
