{
  "name": "umple-lsp",
  "displayName": "umple-language-server",
  "description": "Language server for the Umple modeling language",
  "version": "0.0.1",
  "publisher": "umple",
  "repository": {
    "type": "git",
    "url": "https://github.com/DraftTin/umple-lsp"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "main": "./client/out/extension",
  "categories": [
    "Programming Languages"
  ],
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "download-jar": "curl -# -L https://try.umple.org/scripts/umplesync.jar --output umplesync.jar"
  },
  "contributes": {
    "configuration": {
      "title": "Umple",
      "properties": {
        "umple.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update umplesync.jar to the latest version on startup."
        }
      }
    },
    "languages": [
      {
        "id": "umple",
        "aliases": [
          "Umple",
          "umple"
        ],
        "extensions": [
          ".ump"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "umple",
        "scopeName": "source.umple",
        "path": "./syntaxes/umple.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "umple",
        "path": "./snippets/umple.json"
      }
    ]
  }
}
