{
  "name": "tree-sitter-umple",
  "version": "0.1.0",
  "description": "Tree-sitter grammar for Umple modeling language",
  "main": "bindings/node/index.js",
  "keywords": [
    "tree-sitter",
    "parser",
    "umple"
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/umple/umple-lsp"
  },
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "node-gyp-build": "^4.8.4",
    "tree-sitter": "^0.21.1"
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.26.3"
  },
  "scripts": {
    "build": "tree-sitter generate && node-gyp rebuild",
    "generate": "tree-sitter generate",
    "test": "tree-sitter test",
    "parse": "tree-sitter parse"
  },
  "tree-sitter": [
    {
      "scope": "source.umple",
      "file-types": [
        "ump"
      ],
      "injection-regex": "umple",
      "highlights": "queries/highlights.scm",
      "locals": "queries/locals.scm"
    }
  ]
}
